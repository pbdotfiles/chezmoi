#!/bin/bash

{{ include ".chezmoitemplates/pause_on_error" }}

# Trigger if the crontab source file changes
# chopin_crontab hash: {{ include "dot_chopin_crontab.tmpl" | sha256sum }}

echo "⏰ Updating system crontab from ~/.chopin_crontab..."

if [ -f "$HOME/.chopin_crontab" ]; then
    crontab "$HOME/.chopin_crontab"
    echo "✅ System crontab updated successfully."
else
    echo "❌ Error: ~/.chopin_crontab not found."
    exit 1
fi
