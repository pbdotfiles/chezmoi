	#hop from https://stackoverflow.com/questions/1282639/switch-git-branch-without-files-checkout
	hop = "!f() { git rev-parse --verify \"$*\" && git checkout \"HEAD^{}\" && git reset --soft \"$*\" && git checkout \"$*\"; }; f"
